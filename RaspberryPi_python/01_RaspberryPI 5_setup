# test_camera.py
import cv2
# ì¹´ë©”ë¼ ì—´ê¸°
cap = cv2.VideoCapture(0)

if not cap.isOpened():
    print("ì¹´ë©”ë¼ë¥¼ ì—´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤")
    exit()
print("ì¹´ë©”ë¼ í…ŒìŠ¤íŠ¸ ì‹œì‘ (që¥¼ ëˆŒëŸ¬ ì¢…ë£Œ)")

while True:
    ret, frame = cap.read()
    if not ret:
        break
    
    cv2.imshow('Camera Test', frame)
    
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
